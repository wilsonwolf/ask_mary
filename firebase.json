{
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "ask-mary",
          "region": "us-west2"
        }
      },
      {
        "source": "/ws/**",
        "run": {
          "serviceId": "ask-mary",
          "region": "us-west2"
        }
      },
      {
        "source": "/webhooks/**",
        "run": {
          "serviceId": "ask-mary",
          "region": "us-west2"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
